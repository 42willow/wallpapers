---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  images: Record<string, () => Promise<{ default: ImageMetadata }>>;
  imgPath: string;
  name: string;
  flavour: string;
  author?: string;
  class?: string;
}

const {
  images,
  imgPath,
  name,
  flavour,
  author,
  class: className,
} = Astro.props;
if (!images[imgPath]) throw new Error(`"${imgPath}" does not exist in glob`);
---

<div class:list={["card", className, flavour]} data-imgPath={imgPath}>
  <div class="group relative rounded-lg overflow-hidden">
    <Image
      src={images[imgPath]()}
      alt={author ? `${name} by ${author}` : name}
      width={800}
      quality={"mid"}
      class="wallpaper"
    />
    <div
      class="p-3 absolute bg-ctp-surface0/80 transition-opacity duration-300 group-hover:opacity-100 opacity-0 top-0 left-0 w-full min-h-12"
    >
      <span class="font-bold">{name.replaceAll("_", " ")}</span>
    </div>
  </div>
</div>
